<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="santi.denis.receitas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_recipe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_recipe"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.NovaReceita" />
        <activity android:name=".Activities.Receitas" />
        <activity android:name=".Activities.EditarReceita" />
    </application>

</manifest>